<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/newbckgrnd"
    tools:context="com.example.user.myprojectpractice.InstructionsActivity">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:textColor="#0f2379"
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="There will appear three buttons on the first page. First one is the Search button for finding a particular restaurant. Second one will show the list of the restaurants. One can call, see the review or the map by pressing the list. People can also sign up/ log in to give review and rate the restaurants."
        android:textColor="@color/colorAccent"
        android:textSize="20dp"/>

</LinearLayout>
